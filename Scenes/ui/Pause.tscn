script/source = "extends Control


var enabled : bool = false
var show_joystick := false
export (String, FILE, \"*.tscn\") var menu_scene
export (String, FILE, \"*.tscn\") var quit_scene


func _process(_delta):
	if Input.is_action_just_pressed(\"ui_cancel\"):
		switch()


func _ready() -> void:
	get_node(\"MarginContainer\").visible = false
	get_node(\"ColorRect\").visible = false


func switch():
	if enabled:
		_return_to_game()
	else:
		_on_Pause_pressed()


# Кнопка паузы
func _on_Pause_pressed() -> void:
	enabled = true
	FX.btn_click()
	get_node(\"MarginContainer\").visible = true
	get_node(\"ColorRect\").visible = true
	get_node(\"Pause\").visible = false
	if UI.get_node(\"Joystick\").visible:
		UI_INIT.hide_joystick()
		show_joystick = true
	if (has_node(\"/root/Node2D/Body\")):
		get_node(\"/root/Node2D/Body\").lock()


# Кнопка возврата в игру
func _return_to_game(play_sound : bool = true) -> void:
	enabled = false
	if play_sound:
		FX.btn_click()
	get_node(\"MarginContainer\").visible = false
	get_node(\"ColorRect\").visible = false
	get_node(\"Pause\").visible = true
	if (has_node(\"/root/Node2D/Body\")):
		get_node(\"/root/Node2D/Body\").unlock()
	if show_joystick:
		UI_INIT.show_joystick()
	show_joystick = false


# Кнопка возврата в меню
func _to_menu() -> void:
	FX.btn_click()
	SCENES.load_scene(menu_scene)
	yield(get_tree().create_timer(SCENES.time), \"timeout\")
	# Убрать паузу
	_return_to_game(false)


# Выход из игры
func _quit_game():
	# Сохранить данные
	GLOBAL.write_settings()
	# Закрыть игру
	SCENES.load_scene(quit_scene)


func _settings():
	FX.btn_click()
	get_node(\"MarginContainer/HBoxContainer/Settings\").visible = !get_node(\"MarginContainer/HBoxContainer/Settings\").visible
"

